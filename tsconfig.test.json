{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "rootDir": ".",
    "outDir": "./dist-test",
    "lib": ["ES2024", "DOM"]
  },
  "include": [
    "tests/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-test"
  ]
}
